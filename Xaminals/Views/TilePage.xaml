<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xaminals.Views.TilePage"
             Title="TilePage">

	<CollectionView x:Name="ItemsCollectionView" ItemsSource="{Binding Items}" VerticalScrollBarVisibility="Always" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
		<CollectionView.ItemTemplate>
			<DataTemplate>
				<VerticalStackLayout VerticalOptions="FillAndExpand" x:Name="ItemContainer">
					<Frame HeightRequest="{Binding Source={RelativeSource Self}, Path=Width}" HasShadow="False">
						<Image Source="{Binding Image, Mode=OneWay}" HorizontalOptions="FillAndExpand"  Aspect="AspectFit"/>
					</Frame>
					<Label Text="{Binding Name}" LineBreakMode="WordWrap" HorizontalOptions="CenterAndExpand"/>
					
				</VerticalStackLayout>
			</DataTemplate>
		</CollectionView.ItemTemplate>
		<CollectionView.ItemsLayout>
			<GridItemsLayout Orientation="Vertical" Span="2"/>
		</CollectionView.ItemsLayout>
	</CollectionView>
</ContentPage>